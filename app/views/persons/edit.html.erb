<%= form_tag(edit_person_path(@person), method: "get") do %>
  <%= label_tag("Full Name:") %>
  <%= text_field_tag(:fullname, @person.name) %>
  <br>
  <%= label_tag("Date of birth:") %>
  <%= date_select :person, :birth_date, :start_year=>1900, :end_year=>Date.today.year, :selected=>@person.birthday %>
  <br>
  <%= label_tag("Sex:") %>
  <%= select_tag "sex", options_for_select([['Male' , 'Male'], ['Female', 'Female']], @person.sex) %>
  <br>
  <%= label_tag("Email:") %>
  <%= text_field_tag(:email, @person.email) %>
  <br>
  <%= label_tag("Phone Number:") %>
  <%= text_field_tag(:phone_number, @person.phone_number) %>
  <br>
  <%= label_tag("Description:") %>
  <br>
  <%= text_field_tag(:description, @person.description, size:50) %>
  <br>
  <%= submit_tag("Save") %>
<% end %>